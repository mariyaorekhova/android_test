<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Sirius" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowTranslucentNavigation">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorButtonNormal">@color/rating_background</item>
    </style>

    <style name="Button.Yellow" parent="Theme.Sirius">
        <item name="colorAccent">@color/rating_background</item>
    </style>

    <style name="TextAppearance" />

    <style name="UiKitV2.TextAppearance.Regular" parent="TextAppearance">
        <item name="android:fontFamily">@font/sk_modernist_regular</item>
    </style>

    <style name="UiKitV2.TextAppearance.Regular14_05" parent="UiKitV2.TextAppearance.Regular">
        <item name="android:letterSpacing">0.05</item>
        <item name="lineHeight">14sp</item>
    </style>

    <style name="UiKitV2.TextAppearance.Regular20" parent="UiKitV2.TextAppearance.Regular">
        <item name="lineHeight">20sp</item>
    </style>

    <style name="UiKitV2.TextAppearance.Regular20_05" parent="UiKitV2.TextAppearance.Regular20">
        <item name="android:letterSpacing">0.05</item>
    </style>

    <style name="UiKitV2.TextAppearance.Regular26_05" parent="UiKitV2.TextAppearance.Regular">
        <item name="android:letterSpacing">0.05</item>
        <item name="lineHeight">26sp</item>
    </style>

    <style name="UiKitV2.TextAppearance.Regular58_05" parent="UiKitV2.TextAppearance.Regular">
        <item name="android:letterSpacing">0.05</item>
        <item name="lineHeight">58sp</item>
    </style>

</resources>